@page
@model IndexModel
@{
    ViewData["Title"] = @Model.Title;
}
<!--https://www.w3schools.com/w3css/w3css_web_tmp_band.asp-->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Bearded Belligerents</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://www.w3schools.com/lib/w3.js"></script>
    <style>
        .image-container {
            position: relative;
            display: inline-block;
        }

        .schedule-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -60%);
            text-align: center;
            color: #FFB33D;
            text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.9);
            z-index: 2;
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
        }

            .schedule-overlay span {
                margin-bottom: 2px;
            }

        .schedule-item {
            margin-bottom: 20px;
            line-height: 1.2;
            font-size: larger;
        }

            .schedule-item h2:before {
                content: url('/Assets/BBRotateSmall.gif');
                display: inline-block;
                height: 1em;
                vertical-align: middle;
                margin-right: 3px;
            }

            .schedule-item h2:after {
                content: url('/Assets/BBRotateSmall.gif');
                display: inline-block;
                height: 1em;
                vertical-align: middle;
                margin-left: 3px;
            }
        .merch-link {
            text-align: center;
            color: #FFB33D;
            text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.9);
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Start Content -->
    <div id="home" class="w3-content">

        <!-- Logo -->
        <img src="~/Assets/BB_RIP_BlackBG_WithBeard.jpg" width="100%">

        <!-- Merch Link -->
        <div class="merch-link">
            <a href="https://www.facebook.com/BeardedBelligerentsVT/shop" target="_blank">Check out our merch!</a>
        </div>

        <!-- Image -->
        <div class="image-container">
            <img src="~/Images/FullBandBW2_Shrunk.jpg" width="100%">

            <!-- Performance Schedule -->
            <div class="schedule-overlay">
                <div class="schedule-item">
                    <span>Northern Fire Battle of the Bands</span><br />
                    <span>Eagle #1464</span>
                    <span>Berlin, NH</span><br />
                    <span>Saturday, May 18</span>
                </div>
                <div class="schedule-item">
                    <span>PK's Irish Pub</span><br />
                    <span>Rockingham, VT</span>
                    <span>https://www.pksirishpub.com/</span><br />
                    <span>Friday, May 31</span>
                </div>                   
                <!-- Add more schedule items as needed -->
            </div>
        </div>

        <!-- End Content -->
    </div>
</body>

</html>
