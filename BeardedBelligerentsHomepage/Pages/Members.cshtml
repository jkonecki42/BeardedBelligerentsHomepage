@model BeardedBelligerentsHomepage.Pages.MembersModel
<!-- Members -->
<!DOCTYPE html>
<html>
<head>
    <title>Band Members</title>
    <style>
        .member {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
            position: relative;
        }

            .member img {
                width: 500px;
                height: auto;
                margin-bottom: 10px;
            }

            .member .info {
                position: absolute;
                bottom: 0;
                text-align: center;
                background-color: rgba(0, 0, 0, 0.7);
                color: #fff;
                width: 70%;
                padding: 5px;
            }

                .member .info h3,
                .member .info p {
                    margin: 0;
                }
    </style>
</head>
<body>
    <div class="members">
        <div class="member">
            <img src="~/Images/Wade_Member_Shrunk.jpg" alt="Wade">
            <div class="info">
                <h3>Wade</h3>
                <p>Lead Vocals, Frying Pan</p>
            </div>
        </div>
        <div class="member">
            <img src="~/Images/Mike_Member_Shrunk_2.jpg" alt="Slappy">
            <div class="info">
                <h3>Slappy</h3>
                <p>Drums</p>
            </div>
        </div>
        <div class="member">
            <img src="~/Images/Nic_Member_Shrunk.jpg" alt="Nic">
            <div class="info">
                <h3>Nic</h3>
                <p>Lead/Rhythm Guitar</p>
            </div>
        </div>
        <div class="member">
            <img src="~/Images/Russ_Member_Shrunk.jpg" alt="Russ">
            <div class="info">
                <h3>Russ</h3>
                <p>Lead/Rhythm Guitar, Vocals</p>
            </div>
        </div>
        <div class="member">
            <img src="~/Images/Josh_Member_Shrunk.jpg" alt="Josh">
            <div class="info">
                <h3>Josh</h3>
                <p>Bass Guitar</p>
            </div>
        </div>
    </div>
</body>
</html>

